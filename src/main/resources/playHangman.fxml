      </ImageView>

      <ImageView fx:id="hangman9" fitHeight="314.0" fitWidth="416.0" layoutX="14.0" layoutY="173.0" visible="false">
         <image>
            <Image url="@HangmanPictures/HangmanDesign9.gif" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>

      <ImageView fx:id="hangman10" fitHeight="314.0" fitWidth="416.0" layoutX="14.0" layoutY="173.0" visible="false">
         <image>
            <Image url="@HangmanPictures/HangmanDesign10.gif" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>

      <!-- Gewonnen bzw Verloren Seite:  -->

      <!-- Gif wird angezeigt, wenn gewonnen.  -->
      <ImageView fx:id="uWin" fitHeight="314.0" fitWidth="416.0" layoutX="14.0" layoutY="173.0" visible="false">
         <image>
            <Image url="@GifsForLoseOrWin/uWin.gif" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>

      <!-- Gif wird angezeigt, wenn verloren. -->
      <ImageView fx:id="uLost" fitHeight="174.0" fitWidth="248.0" layoutX="458.0" layoutY="173.0" visible="false">
         <image>
            <Image url="@GifsForLoseOrWin/uLost.gif" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>

      <!-- Button beendet das Spiel. -->
      <Button fx:id="quitButton" blendMode="SCREEN" layoutX="482.0" layoutY="411.0" mnemonicParsing="false" onAction="#quitGame" prefHeight="30.0" prefWidth="200.0" text="I've had enough." visible="false">
         <font>
            <Font size="12.0" />
         </font>
      </Button>

      <!-- Button gibt Möglichkeit zum Neustarten des Spiels. -->
      <Button fx:id="restartButton" blendMode="SCREEN" layoutX="482.0" layoutY="452.0" mnemonicParsing="false" onAction="#pressToPlay" prefHeight="30.0" prefWidth="200.0" visible="false">
         <font>
            <Font size="12.0" />
         </font>
      </Button>

      <!-- Wort wird zum Schluss angezeigt, damit Spieler/innen sehen können, welches Wort gesucht war. -->
      <Label fx:id="wordToCheck" alignment="CENTER" layoutX="480.0" layoutY="366.0" prefHeight="42.0" prefWidth="201.0" textFill="#f2eeee" visible="false">
         <font>
            <Font size="18.0" />
         </font>
      </Label>



   </children>
</AnchorPane>
